BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation:'horizontal'
        TextInput:
            id: input
            text: ''
            font_size: 48
            multiline: False
        BoxLayout:
            orientation:'vertical'
            size_hint:0.2,1
            Button:
                text:"up"
                on_press:app.change(1)

            Button:
                text:"down"
                on_press:app.change(-1)
    Button:
        text:"Convert M to KM"
        on_press:app.convert(int(input.text))

    Label:
        id:output
        text:""
